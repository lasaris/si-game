<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:intermissionModule="clr-namespace:Seng.Game.Business.DTOs.Components.IntermissionModule;assembly=Seng.Game.Business"
                    xmlns:components="clr-namespace:Seng.Game.Business.DTOs.Components;assembly=Seng.Game.Business"
                    xmlns:converters="clr-namespace:Seng.Game.Desktop.Views.Converters">

    <converters:EmptyListToVisibilityConverter x:Key="EmptyListToVisibilityConverter" />

    <DataTemplate x:Key="TextComponentDataTemplate" 
                  DataType="{x:Type components:TextComponentDto}">
        <TextBlock Text="{Binding Text}"
                   TextAlignment="Center"
                   FontSize="20"
                   Margin="0 5"
                   Background="Gray"/>
    </DataTemplate>

    <DataTemplate x:Key="QuestionComponentDataTemplate" 
                  DataType="{x:Type intermissionModule:QuestionComponentDto}">
        <TextBlock Text="{Binding Text}"
                   TextAlignment="Center"
                   FontSize="20"
                   Margin="0 5"
                   Background="LightGray"/>
    </DataTemplate>

    <Style TargetType="{x:Type Button}">
        <Setter Property="HorizontalAlignment"
                Value="Center" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="Height"
                Value="50" />
        <Setter Property="Width"
                Value="100" />
    </Style>

</ResourceDictionary>