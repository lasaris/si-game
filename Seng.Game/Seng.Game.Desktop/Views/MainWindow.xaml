<Window x:Class="Seng.Game.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="Social Engineering Game"
        MinWidth="1024"
        MinHeight="768">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ContentControl Grid.Row="0"
                        prism:RegionManager.RegionName="MainRibbonRegion" />

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Height="50">
            <Button Content="Desktop"
                    Width="100"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="DesktopComponentView" />
            <Button Content="Text"
                    Width="100"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="TextComponentView" />
        </StackPanel>
    </Grid>

</Window>